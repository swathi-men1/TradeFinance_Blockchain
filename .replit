modules = ["nodejs-20", "postgresql-16", "python-3.11", "web"]

run = "uvicorn backend.app.main:app --host 0.0.0.0 --port 8000"

hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
run = ["uvicorn", "backend.app.main:app", "--host", "0.0.0.0", "--port", "8000"]
build = ["sh", "-c", "cd client && npm install && npm run build"]

[[ports]]
localPort = 5173
externalPort = 5173

[[ports]]
localPort = 8000
externalPort = 80
